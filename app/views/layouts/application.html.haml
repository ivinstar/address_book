!!!
%html
  %head
    %title AddressBook
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body(ng-app="addbookApp")
    .container-fluid
      = render 'layouts/partials/header'

      .angular-container{"ng-controller" => (content_for?(:ng_controller) ? yield(:ng_controller) : nil), "ng-init" => (content_for?(:ng_init) ? yield(:ng_init) : nil)}

        = render 'layouts/partials/breadcrumbs'

        = render 'layouts/partials/flash'

        = yield

    = render 'layouts/partials/footer'
